<launch>

  <!-- Load config file to set logging level-->
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find simple_local_path_planner)/config/logging.conf"/>

  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="move_forward_only" default="false"/>

  <!-- MODIFICATION: use local modified copy of move_base.launch -->
  <include file="$(find simple_local_path_planner)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure"/>

</launch>
